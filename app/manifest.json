{
	"manifest_version": 2,

	"name": "Hover Inspect",
	"version": "2.0.0",
	"description": "Blazing fast page layout inspection",
	"author": "Shubin Ilya",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"icons": {
		"16": "icon.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["event.js"],
		"persistent": false
	},

	"permissions": ["activeTab"],
	"web_accessible_resources": ["template.html"]
}
